---
import Menu from "./Menu"
import Searchbar from "./Searchbar"

const url = Astro.url
---

<nav class="m-3 md:flex flex gap-2 items-center">
    <div class="md:flex-none flex items-center">
        <a href="/" class=" rounded-full p-3 hover:bg-gray-200">
            <picture>
                <img class="w-6 min-w-6" src="/favicon.svg" alt="Logo de Pinterest">
            </picture>
        </a>

        <div class="">
            <Menu client:visible url={url.pathname} />
        </div>
    </div>
    

    <div class="hover:bg-gray-200 p-3 rounded-full cursor-pointer md:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search text-gray-600 w-6" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" /><path d="M21 21l-6 -6" /></svg>
    </div>

    <div class="md:flex-auto md:block hidden">
        <Searchbar client:visible/>
    </div>

    <div class="col-start-11 col-end-13 flex items-center justify-between">
        <div class="hover:bg-gray-200 p-3 rounded-full cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-bell-filled text-gray-600 w-6" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M14.235 19c.865 0 1.322 1.024 .745 1.668a3.992 3.992 0 0 1 -2.98 1.332a3.992 3.992 0 0 1 -2.98 -1.332c-.552 -.616 -.158 -1.579 .634 -1.661l.11 -.006h4.471z" stroke-width="0" fill="currentColor" /><path d="M12 2c1.358 0 2.506 .903 2.875 2.141l.046 .171l.008 .043a8.013 8.013 0 0 1 4.024 6.069l.028 .287l.019 .289v2.931l.021 .136a3 3 0 0 0 1.143 1.847l.167 .117l.162 .099c.86 .487 .56 1.766 -.377 1.864l-.116 .006h-16c-1.028 0 -1.387 -1.364 -.493 -1.87a3 3 0 0 0 1.472 -2.063l.021 -.143l.001 -2.97a8 8 0 0 1 3.821 -6.454l.248 -.146l.01 -.043a3.003 3.003 0 0 1 2.562 -2.29l.182 -.017l.176 -.004z" stroke-width="0" fill="currentColor" /></svg>
