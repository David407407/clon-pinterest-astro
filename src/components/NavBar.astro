        <a href="/profile">
            <div class="hover:bg-gray-200 p-3 rounded-full cursor-pointer">
                <img class="w-6 rounded-full min-w-6" src="/imgs/perfil.jpg" alt="Imagen de perfil">
            </div>
        </a>

        <div class="hover:bg-gray-200 p-3 rounded-full cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-down" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 9l6 6l6 -6" /></svg>
        </div>
    </div>
    
    
    
