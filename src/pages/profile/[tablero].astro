---
import Tablero from '@/components/Tablero';
import Layout from '../../layouts/Layout.astro';

const tituloTablero = Astro.url.pathname.split('/')[2]

---

<Layout title="Pinterest">
	<main class="w-full my-10">
        <div class="space-y-4">
			
			<div class="flex gap-2 justify-center">
				<h3 class="text-3xl font-medium text-center text-gray-800">{tituloTablero === 'favorites' ? 'Todos los Pines' : tituloTablero}</h3>
				<button class='bg-gray-200/80 hover:bg-gray-200 transition-colors w-8 h-8 rounded-full'>
					<svg class='w-4 mx-auto' xmlns="http://www.w3.org/2000/svg" height="16" width="14" viewBox="0 0 448 512"><path d="M8 256a56 56 0 1 1 112 0A56 56 0 1 1 8 256zm160 0a56 56 0 1 1 112 0 56 56 0 1 1 -112 0zm216-56a56 56 0 1 1 0 112 56 56 0 1 1 0-112z"/></svg>
				</button>
			</div>
      
            <div class="w-full mx-auto rounded-full flex justify-center -space-x-5 cursor-pointer hover:brightness-90 transition-all duration-300">
                <img class="rounded-full w-12"  src="/imgs/perfil.jpg" alt="Imagen de perfil">

				<div class="rounded-full flex items-center justify-center w-12 relative bg-white">
					<div class="w-[42px] h-[42px] rounded-full bg-gray-200 flex justify-center items-center text-gra-800">
